<div class="container">

  <h1>Tweets</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>User</th>
        <th>Content</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tweets.each do |tweet| %>
        <tr>
          <td><%= tweet.user.email %></td>
          <td><%= tweet.content %></td>
          <td><%= tweet.text %></td>
          <td><%= link_to 'Show', tweet %></td>
          <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
          <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Tweet', new_tweet_path, class: "btn btn-primary" %>
</div>